<launch>
    <!--urdf路径-->
    <let name="urdf_path"
         value="$(find-pkg-share unitree_robot_description)/urdf/mock_components/mock_arm.urdf.xacro" />

    <!--rviz的config路径-->
    <let name="rviz_config_path"
         value="$(find-pkg-share unitree_robot_description)/rviz/unitree_mock_config.rviz" />  

    <!---->
    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
               value="$(command 'xacro $(var urdf_path)')" />
    </node> 
    
    <node pkg="controller_manager" exec="ros2_control_node">
        <param from="$(find-pkg-share unitree_bringup)/config/unitree_mock_controller.yaml" />
    </node> 

    <node pkg="controller_manager" exec="spawner" args="joint_state_broadcaster" />

    <node pkg="controller_manager" exec="spawner" args="arm_joints_controller" />

    <node pkg="rviz2" exec="rviz2" output="screen" args="-d ${var rviz_config_path}" />

</launch>